<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/form.css" class="css">
  
</head>

<body>
 
  <div class="container">
      <div class="formbox">
        <h1 id="title">sign up</h1>
        <form action="/form" method="post" id="signupform">
         <input type="hidden" name="action" value="signup">
        
          <div class="inputgrp">
            <div class="inputfield" id="namefield">
              <i class="fa-regular fa-user"></i>
              <input type="text" placeholder="enter your name" name="name1" required>
              <div class="error-message" id="name-error" style="display: none;">Please enter your name.</div>
            </div>

           
            <div class="inputfield" id="emailfield">
              <i class="fa-solid fa-envelope"></i>
              <input type="email" placeholder="enter your email" name="email" required>
              <div class="error-message" id="email-error" style="display: none;">Please enter your email.</div>

            </div>

            <div class="inputfield" id="passwordfield">
              <i class="fa-solid fa-lock"></i>
              <input type="password" placeholder="enter your password" name="password" required>
              <div class="error-message" id="password-error" style="display: none;">Please enter your password.</div>
            </div>

          </div>
          <div class="error-message" id="signuperror">
                 {{#if error}}
                   <p class="error">{{error}}</p>
                   {{/if}}
             </div>
             
          <div class="btnfield">
                <button type="button"class="btn1" id="signupbtn1">Sign up</button>
                <button type="button"class="btn2" id="signinbtn1">sign in</button>
          </div>
          <button class="submitbtn" type="submit">submit</button>

        </form>

          <form action="/form" method="post" id="signinform" style="display: none;">
          <input type="hidden" name="action" value="signin">
        
          <div class="inputgrp">

            <div class="inputfield">
              <i class="fa-solid fa-envelope"></i>
              <input type="email" placeholder="enter your email" name="email" required>
            </div>

            <div class="inputfield">
              <i class="fa-solid fa-lock"></i>
              <input type="password" placeholder="enter your password" name="password" required>
            </div>

          </div>
            <div class="error-message" id="signinerror">
                 {{#if error}}
                   <p class="error">{{error}}</p>
                   {{/if}}
             </div>
          <div class="btnfield">
                <button type="button" class="btn1" id="signupbtn">Sign up</button>
                <button type="button" class="btn2" id="signinbtn">sign in</button>
          </div>
          <button class="submitbtn" type="submit">submit</button>


          </form>

         

      </div>
  </div>
 
  <script src="https://kit.fontawesome.com/529bc31be0.js" crossorigin="anonymous"></script>
  <script>
    console.log("working")
     let signupform = document.getElementById('signupform');
    let signinform = document.getElementById('signinform');
    let signupbtn1 = document.getElementById('signupbtn1'); // Updated ID
    let signinbtn1 = document.getElementById('signinbtn1');// Updated ID
    let signinbtn=document.getElementById('signinbtn')
    let signupbtn=document.getElementById('signupbtn')
    let title = document.getElementById('title');
    
     signinbtn1.onclick = function () {
    namefield.style.display = "none";
    title.innerHTML = "Sign in";
    signupform.style.display = "none";
    signinform.style.display = "block";
    signinform.action = "/form?action=signin";
    signinbtn.classList.remove("btn2");
    signupbtn.classList.add("btn2");
  }

  signupbtn.onclick = function () {
    namefield.style.display = "block";
    title.innerHTML = "Sign up";
    signupform.style.display = "block";
    signinform.style.display = "none";
    signupform.action = "/form?action=signup";
    signupbtn.classList.remove("btn2");
    signinbtn.classList.add("btn2");
  } 
  
  function hide()
  {
    setTimeout(function () {
            document.getElementById('signinerror').style.display = 'none';
            document.getElementById('signuperror').style.display = 'none';
        }, 3000);

    
  }
  window.onload=hide;
  //for signup validation
  if(action==signup){
  document.querySelector('form').addEventListener('submit', function(event) {
  const nameField = document.querySelector('input[name="name1"]');
  const emailField = document.querySelector('input[name="email"]');
  const passwordField = document.querySelector('input[name="password"]');
  
  if (!nameField.value || !emailField.value || !passwordField.value) {
    event.preventDefault(); // Prevent form submission
    alert('Please fill in all required fields.');
  }
});
  }
 
 //for signin validation
 else{
  document.querySelector('form').addEventListener('submit', function(event) {
  const emailField = document.querySelector('input[name="email"]');
  const passwordField = document.querySelector('input[name="password"]');
  
  if ( !emailField.value || !passwordField.value) {
    event.preventDefault(); // Prevent form submission
    alert('Please fill in all required fields.');
  }
});
 }

 
   
    
    

  </script>

</body>

</html>
